<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Album Search Results</title>
  </head>
  <body>
    <h1>Album Search Results</h1>
    <ul>
      {{#each albums}}
        <li>
          <h2>{{this.name}}</h2>
          {{#if this.firstImage}}
            <img src="{{this.firstImage}}" alt="{{this.name}}" />
          {{/if}}
          <a href="/tracks/{{this.id}}">
            <button>View Tracks</button>
          </a>
        </li>
      {{/each}}
    </ul>
  </body>
</html>